<?xml version="1.0" encoding="utf-8" ?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
  <PreferenceCategory android:title="@string/RouterPreferenceCategoryTitle">
    <EditTextPreference
      android:key="@string/RouterIpAddressPreferenceKey"
      android:title="@string/RouterIpAddressPreferenceTitle"
      android:inputType="text"
      android:singleLine="true"
      android:defaultValue="@string/DefaultRouterIpAddress"/>

    <EditTextPreference
      android:key="@string/RouterUsernamePreferenceKey"
      android:title="@string/RouterUsernamePreferenceTitle"
      android:inputType="text"
      android:singleLine="true"
      android:capitalize="none"
      android:defaultValue="@string/DefaultRouterUsername"/>

    <EditTextPreference
      android:key="@string/RouterPasswordPreferenceKey"
      android:title="@string/RouterPasswordPreferenceTitle"
      android:inputType="textPassword"
      android:singleLine="true"
      android:capitalize="none"/>

    <EditTextPreference
      android:key="@string/RouterSshPortPreferenceKey"
      android:title="@string/RouterSshPortPreferenceTitle"
      android:singleLine="true"
      android:defaultValue="@integer/DefaultRouterSshPort"/>
  </PreferenceCategory>

  <PreferenceCategory android:title="@string/VpnItemPreferenceCategoryTitle">
  </PreferenceCategory>
</PreferenceScreen>